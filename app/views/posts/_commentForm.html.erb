<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter, "Ad Soyad:" %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body, "Yorumunuz:" %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Yorumu Kaydet", class: "btn btn-success" %>
  </p>
<% end %>
